<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormInput">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="- Buku Ramadhan -"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Pendataan Ramadhan"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView0"
                    style="@style/myTextLabel"
                    android:layout_marginTop="10dp"
                    android:text="Data Pribadi"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/myTextLabel"
                    android:text="Nama" />

                <EditText
                    android:id="@+id/input_nama"
                    style="@style/myEditText"
                    android:hint="Masukan Nama" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/myTextLabel"
                    android:text="Alamat" />

                <EditText
                    android:id="@+id/input_alamat"
                    style="@style/myEditText"
                    android:gravity="start|top"
                    android:hint="Masukan Alamat"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/myTextLabel"
                    android:layout_marginTop="10dp"
                    android:text="Data Tempat"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView10"
                    style="@style/myTextLabel"
                    android:text="Nama Masjid" />

                <EditText
                    android:id="@+id/input_namamasjid"
                    style="@style/myEditText"
                    android:hint="Masukan Nama Masjid" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView30"
                    style="@style/myTextLabel"
                    android:text="Alamat Masjid" />

                <EditText
                    android:id="@+id/input_alamatmasjid"
                    style="@style/myEditText"
                    android:hint="Masukan Alamat Masjid" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView31"
                    style="@style/myTextLabel"
                    android:text="Imam/Khatib" />

                <EditText
                    android:id="@+id/input_imam"
                    style="@style/myEditText"
                    android:hint="Masukan Nama Imam" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView32"
                    style="@style/myTextLabel"
                    android:layout_marginTop="10dp"
                    android:text="Catatan Ramadhan"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView33"
                    style="@style/myTextLabel"
                    android:text="Tanggal" />

                <EditText
                    android:id="@+id/input_tanggal"
                    style="@style/myEditText"
                    android:hint="Masukan Tanggal" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView34"
                    style="@style/myTextLabel"
                    android:text="Ramadhan Ke-" />

                <Spinner
                    android:id="@+id/ramadhan_ke"
                    style="@style/myEditText"
                    android:layout_width="0dp"
                    android:entries="@array/angka" />
            </LinearLayout>

            <LinearLayout
                style="@style/myLinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/myTextLabel"
                    android:layout_width="match_parent"
                    android:text="Sholat Wajib" />

                <CheckBox
                    android:id="@+id/cb_subuh"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Subuh"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <CheckBox
                    android:id="@+id/cb_dzuhur"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Dzuhur"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <CheckBox
                    android:id="@+id/cb_asar"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Asar"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <CheckBox
                    android:id="@+id/cb_maghrib"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Maghrib"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <CheckBox
                    android:id="@+id/cb_isya"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:text="Isya"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/myLinearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    style="@style/myTextLabel"
                    android:layout_width="131dp"
                    android:layout_marginTop="10dp"
                    android:text="Sholat Tarawih" />

                <RadioGroup
                    android:id="@+id/tarawih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_tarawih_iya"
                        style="@style/myRadioButton"
                        android:text="IYA" />

                    <RadioButton
                        android:id="@+id/rb_tarawih_tidak"
                        style="@style/myRadioButton"
                        android:text="TIDAK" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <Switch
                    android:id="@+id/Puasa"
                    style="@style/myTextLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puasa"
                    android:textOff="Uzur"
                    android:textOn="Puasa" />

            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView36"
                    style="@style/myTextLabel"
                    android:text="Alasan Uzur" />

                <EditText
                    android:id="@+id/input_uzur"
                    style="@style/myEditText"
                    android:hint="Masukan Alasan" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView15"
                    style="@style/myTextLabel"
                    android:layout_marginTop="10dp"
                    android:text="Ceramah"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView16"
                    style="@style/myTextLabel"
                    android:text="Nama Penceramah" />

                <EditText
                    android:id="@+id/input_penceramah"
                    style="@style/myEditText"
                    android:hint="Masukan Nama Penceramah" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/myTextLabel"
                    android:text="Judul Ceramah" />

                <EditText
                    android:id="@+id/input_judul"
                    style="@style/myEditText"
                    android:gravity="start|top"
                    android:hint="Masukan Judul Ceramah"
                    android:inputType="textMultiLine" />


            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">

                <TextView
                    android:id="@+id/textView35"
                    style="@style/myTextLabel"
                    android:text="Isi Ceramah" />

                <EditText
                    android:id="@+id/input_isi"
                    style="@style/myEditText"
                    android:gravity="start|top"
                    android:hint="Masukan Isi Ceramah"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout style="@style/myLinearLayout">


                <Button
                    android:id="@+id/btn_submit"
                    style="@style/mySubmitButton"
                    android:text="Simpan Data" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>